{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ecommerce.db",
    "Redis": "localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ecommerce-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "JWT": {
    "Secret": "MyVerySecureSecretKeyThatIsAtLeast32CharactersLong!",
    "ValidIssuer": "ECommerceAPI",
    "ValidAudience": "ECommerceFrontend",
    "TokenValidityInMinutes": 60,
    "RefreshTokenValidityInDays": 7
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 5000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 200
          }
        ]
      }
    ]
  },
  "RateLimitingEndpoints": {
    "AuthEndpoints": {
      "Login": {
        "Period": "15m",
        "Limit": 5
      },
      "Register": {
        "Period": "1h",
        "Limit": 3
      },
      "RefreshToken": {
        "Period": "1m",
        "Limit": 10
      }
    },
    "AdminEndpoints": {
      "ProductCreate": {
        "Period": "1m",
        "Limit": 20
      },
      "ProductUpdate": {
        "Period": "1m",
        "Limit": 50
      }
    }
  },
  "SmtpConfig": {
    "SmtpServer": "localhost",
    "Port": 587,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@ecommerce.local",
    "DisplayName": "ECommerce",
    "UseSsl": true,
    "FrontendUrl": "http://localhost:3000"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "ECommerce",
    "Enabled": false
  }
}
